<% include ../partials/header %>



    <div class="row">
        <h1 style="text-align:center;">Create a new Campground</h1>
        <div class="centerForm">
            <form action="/campgrounds" method="POST">
            <div class="form-group">
                <input type="text" placeholder="Enter Campground Name" name="campName" class="form-control"></input>
            </div>
            <div class="form-group">
                <input type="number" placeholder="Enter Campground Price" name="campPrice" class="form-control" min="0.01" step="0.01"></input>
            </div>
            <div class="form-group">
                <input type="text" placeholder="Enter Campground Link" name="campLink" class="form-control"></input>
            </div>
            <div class="form-group">
                <input type="text" placeholder="Enter Campground Description" name="campDescription" class="form-control"></input>
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block">Submit!</button>
            </div>
                <a href="/campgrounds">Go Back!</a>
        </form>
        </div>
    </div>


<% include ../partials/footer %>