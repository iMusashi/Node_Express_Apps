<% include ../partials/header %>



    <div class="row">
        <h1 style="text-align:center;">Edit <%=campground.name%></h1>
        <div class="centerForm">
            <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
            <div class="form-group">
                <input type="text" name="camp[name]" class="form-control" value="<%=campground.name%>"></input>
            </div>
            <div class="form-group">
                <input type="number" name="camp[price]" value="<%=campground.price%>" class="form-control" min="0.01" step="0.01"></input>
            </div>
            <div class="form-group">
                <input type="text" name="camp[image]" class="form-control" value="<%=campground.image%>"></input>
            </div>
            <div class="form-group">
                <input type="text" name="camp[description]" class="form-control" value="<%=campground.description%>"></input>
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block">Update</button>
            </div>
                <a href="/campgrounds/<%=campground._id%>">Go Back!</a>
        </form>
        </div>
    </div>


<% include ../partials/footer %>